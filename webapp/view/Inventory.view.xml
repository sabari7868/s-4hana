<mvc:View
  controllerName="inventoryapp.controller.Inventory"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m">

  <Page title="Inventory Overview">
    <content>
      <List items="{/Inventory}">
        <CustomListItem>
          <HBox justifyContent="SpaceBetween" alignItems="Center">
            <VBox>
              <Title text="{Material}" />
              <ObjectAttribute text="Bin: {BinID}" />
              <ObjectAttribute text="Plant: {Plant}" />
              <ObjectAttribute text="Movement: {Movement}" />
            </VBox>
            <ObjectNumber number="{Quantity}" unit="Qty"/>
          </HBox>
        </CustomListItem>
      </List>
    </content>
  </Page>
</mvc:View>
